{% extends 'base.html.twig' %}
{% block title %}Les formations{% endblock %}

{% block body %}
<div class="container-fluid container-lg">
  <div class="row d-flex justify-content-center align-items-center" id="allCardsPage">
  {% for course in allCourses %}
    <div class="col-xs-12 col-lg-3">
      <div class="card mx-4 my-5">
        <div class="courseCard">
          <img src="{{ asset('uploads/images/'  ~ course.picture) }}" class="card-img-top vh-20 mb-2" alt="course_picture">
          <div class="card-body col courseCardText d-flex flex-column justify-content-between vh-40">
            <h5 class="card-title text-center">{{course.title}}</h5>
            <p class="card-text overflow-auto">{{course.description}}.</p>
            <a href="{{ path('app_course_inprogress',{"id":course.id, 'section': 0, 'lesson': 0}) }}" class="btn btn-french-lilac align-self-end">Acc√©der</a>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</div>

{% endblock %}
