{% extends 'base.html.twig' %}

{% block title %}Leçons{% endblock %}

{% block body %}
    <div class="container-fluid container-lg vh-100">
        <h1>Leçons</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Vidéo</th>
                    <th>Description</th>
                    <th>Ressources</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for lesson in lessons %}
                <tr>
                    <td>{{ lesson.title }}</td>
                    <td class="text-break">{{ lesson.video }}</td>
                    <td class="text-break">{{ lesson.description }}</td>
                    <td class="text-break">{{ lesson.resources ? lesson.resources|join(', ') : '' }}</td>
                    <td>
                        <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">Aucune correspondance trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_lesson_new') }}" class="btn btn-french-lilac">Nouvelle leçon</a>
        <a href="{{ path('app_instructor', {'id': user.id }) }}" class="btn btn-french-lilac  mx-5">Retour</a>
    </div>
{% endblock %}
