{% extends 'base.html.twig' %}

{% block title %}Lesson{% endblock %}

{% block body %}
    <h1>Lesson</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ lesson.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ lesson.title }}</td>
            </tr>
            <tr>
                <th>Video</th>
                <td>{{ lesson.video }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ lesson.description }}</td>
            </tr>
            <tr>
                <th>Resources</th>
                <td>{{ lesson.resources ? lesson.resources|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>FinishedBy</th>
                <td>{{ lesson.finishedBy ? lesson.finishedBy|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_lesson_index') }}">back to list</a>

    <a href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">edit</a>

    {{ include('lesson/_delete_form.html.twig') }}
{% endblock %}
