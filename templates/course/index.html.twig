{% extends 'base.html.twig' %}

{% block title %}Formations{% endblock %}

{% block body %}
<div class="container-fluid container-lg vh-100">
    <h1>Mes formations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Publiée?</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for course in courses %}
            <tr>
                <td>{{ course.title }}</td>
                <td>{{ course.isPublished ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_course_edit', {'id': course.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune correspondance trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_course_new') }}" class="btn btn-french-lilac ">Nouvelle formation</a>

    <a href="{{ path('app_instructor', {'id': user.id }) }}" class="btn btn-french-lilac  mx-5">Retour</a>
</div>
{% endblock %}
