{% extends 'base.html.twig' %}
{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container-fluid container-lg">
  <div class="row">
    <div class="d-flex flex-column">
      <p class="my-2"><span class="fs-5 fw-bold">EcoIT</span> est une plateforme d’éducation éco-responsable dont les cours sont dispensés par des experts en accessibilité et en éco-conception web.</p>
      <p class="fst-italic align-bottom my-2">Nos dernières formations publiées:</p>
    </div>
  </div>
  <div class="row d-flex justify-content-center align-items-center">
  {% for course in courses %}
    <div class="col-xs-12 col-lg-4 ">
      <div class="card mx-4 my-5">
        <div class="courseCard">
          <img src="{{ asset('uploads/images/'  ~ course.picture) }}" class="card-img-top" alt="course_picture">
          <div class="card-body col courseCardText d-flex flex-column justify-content-evenly">
            <h5 class="card-title text-center">{{course.title}}</h5>
            <p class="card-text">{{course.description}}.</p>
            {% if student != null and student in course.chosenBy %}
                <a href="{{ path('app_course_inprogress',{"id":course.id}) }}" class="btn btn-french-lilac align-self-end">Continuer</a>
            {% else %}
               <a href="{{ path('app_course_inprogress',{"id":course.id, "startCourse" : "true"}) }}" class="btn btn-french-lilac align-self-end">Suivre</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
  </div>
</div>

{% endblock %}
