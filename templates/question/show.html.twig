{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <div class="container-fluid container-lg vh-100">
        <h1>Question</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ question.id }}</td>
                </tr>
                <tr>
                    <th>Question</th>
                    <td>{{ question.question }}</td>
                </tr>
                <tr>
                    <th>Answers</th>
                    <td>{{ question.answers ? question.answers|json_encode : '' }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_question_index') }}">back to list</a>

        <a href="{{ path('app_question_edit', {'id': question.id}) }}">edit</a>

        {{ include('question/_delete_form.html.twig') }}
    </div>
{% endblock %}
